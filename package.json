{
    "name": "bootstrap-boilerplate",
    "version": "0.0.1",
    "main": "index.js",
    "devDependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.19",
        "@fortawesome/free-solid-svg-icons": "^5.9.0",
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.5",
        "babel-preset-env": "^1.7.0",
        "bootstrap": "^4.3.1",
        "cpx": "^1.5.0",
        "ejs": "^2.6.1",
        "ejs-html-loader": "^4.0.1",
        "glob": "^7.1.4",
        "gulp": "^4.0.2",
        "gulptask-dev-server": "https://github.com/MasatoMakino/gulptask-dev-server.git",
        "html-loader": "^0.5.5",
        "html-webpack-loader": "^0.0.5",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^3.0.1",
        "image-size": "^0.7.4",
        "imagemin": "^6.1.0",
        "imagemin-mozjpeg": "^7.0.0",
        "imagemin-pngquant": "^7.0.0",
        "jquery": "^3.4.1",
        "lazysizes": "^5.1.0",
        "make-dir": "^3.0.0",
        "node-sass": "^4.12.0",
        "node-sass-package-importer": "^5.3.2",
        "npm-run-all": "^4.1.5",
        "onchange": "^6.0.0",
        "popper.js": "^1.15.0",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "sharp": "^0.22.1",
        "webpack": "^4.37.0",
        "webpack-cli": "^3.3.6"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start:dev": "npm-run-all -s build:dev watch",
        "watch:server": "gulp server",
        "watch": "npm-run-all -p watch:*",
        "build:dev": "npm-run-all -s clean publish:build",
        "build:release": "npm-run-all -s clean publish:release",
        "clean": "rimraf dist",
        "sass:nodesass": "node-sass --importer node_modules/node-sass-package-importer/dist/cli.js -o ./dist/css src/scss/style.scss",
        "sass:dev": "npm run sass:nodesass -- --output-style expanded",
        "sass:release": "npm run sass:nodesass -- --output-style compressed",
        "watch:sass": "npm run sass:dev -- -w",
        "css:dev": "npm-run-all -s sass:dev",
        "css:release": "npm-run-all -s sass:release",
        "ejs": "webpack --config webpack.config.ejs.js",
        "watch:ejs": "npm run ejs:dev -- --watch",
        "ejs:dev": "npm run ejs -- --mode development",
        "ejs:release": "npm run ejs -- --mode production",
        "javascript:dev": "webpack --config webpack.config.script.js --mode development",
        "watch:javascript": "npm run javascript:dev -- --watch",
        "javascript:production": "webpack --config webpack.config.script.js --mode production --progress --color",
        "image": "npm-run-all -s imageOptim copy:img",
        "imageOptim": "node task/imageOptim.js production",
        "copy:img": "cpx '.imgBuffer/**/*' ./dist",
        "publish:build": "npm-run-all -p css:dev ejs:dev javascript:dev image",
        "publish:release": "npm-run-all -p css:release ejs:release javascript:production image"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "repository": "git@bitbucket.org:masato_makino_bitbucket/bootstrap-boilerplate.git",
    "author": "MasatoMakino",
    "license": "UNLICENSED"
}
